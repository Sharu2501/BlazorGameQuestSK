@page "/admin"
@using BlazorGame.Client.Services
@using SharedModels.Model
@using System.IO
@using SharedModels.Enum;

@layout EmptyLayout
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject AuthService AuthService
@inject IJSRuntime JS

<link rel="stylesheet" href="css/admin.css" />

@if (!isLoaded)
{
    <div class="loading-container">
        <p>Chargement des données...</p>
    </div>
}
else
{
    <div class="admin-container">
        <main class="main-content">
            <header class="content-header">
                <div class="header-left">
                    <img src="images/logo.png" alt="Logo" class="logo-img" />
                    <div class="header-text">
                        <h1 class="page-title">Panneau d'Administration</h1>
                        <p class="page-subtitle">Gestion complète de votre donjon</p>
                    </div>
                </div>
                <div class="header-right">
                    <button class="notification-btn">
                        <i class="bi bi-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <button class="logout-btn" @onclick="Logout" title="Déconnexion">
                        <i class="bi bi-box-arrow-right"></i>
                    </button>
                </div>
            </header>

            <div class="bento-grid">
                <section class="bento-box leaderboard">
                    <div class="section-header">
                        <div class="header-title">
                            <i class="bi bi-trophy"></i>
                            <h2>Classement des Scores</h2>
                        </div>
                        <button class="toggle-btn" @onclick="ToggleLeaderboard">
                            <i class="bi @(showAllLeaderboard ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            @(showAllLeaderboard ? "Réduire" : "Voir plus")
                        </button>
                    </div>
                    <div class="table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Rang</th>
                                    <th>Joueur</th>
                                    <th>Score</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var rank = 1;
                                    var rows = showAllLeaderboard ? leaderboard.Where(p => p.UserType == UserTypeEnum.PLAYER) :
                                    leaderboard.Where(p => p.UserType == UserTypeEnum.PLAYER).Take(5);
                                }
                                @foreach (var p in rows)
                                {
                                    <tr>
                                        <td>@rank</td>
                                        <td>@p.Username</td>
                                        <td>@(p.HighScore?.Score ?? 0)</td>
                                        <td>@(p.HighScore?.DateAchieved.ToLocalTime().ToString("g") ?? "-")</td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                </section>

                <section class="bento-box stat-card-bento">
                    <div class="stat-icon-wrapper purple"><i class="bi bi-people"></i></div>
                    <div class="stat-info">
                        <p class="stat-label">Joueurs actifs</p>
                        <h3 class="stat-value">@players.Count(p => p.IsActive)</h3>
                        <span class="stat-change positive">+12% ce mois</span>
                    </div>
                </section>

                <section class="bento-box stat-card-bento">
                    <div class="stat-icon-wrapper gold"><i class="bi bi-star"></i></div>
                    <div class="stat-info">
                        <p class="stat-label">Meilleur score</p>
                        <h3 class="stat-value">@(leaderboard.FirstOrDefault()?.HighScore?.Score ?? 0)</h3>
                        <span class="stat-change neutral">@(leaderboard.FirstOrDefault()?.Username ?? "-")</span>
                    </div>
                </section>

                <section class="bento-box stat-card-bento">
                    <div class="stat-icon-wrapper blue"><i class="bi bi-trophy"></i></div>
                    <div class="stat-info">
                        <p class="stat-label">Scores enregistrés</p>
                        <h3 class="stat-value">@highScores.Count</h3>
                        <span class="stat-change positive">+8 cette semaine</span>
                    </div>
                </section>

                <section class="bento-box stat-card-bento">
                    <div class="stat-icon-wrapper green"><i class="bi bi-graph-up"></i></div>
                    <div class="stat-info">
                        <p class="stat-label">Score moyen</p>
                        @{
                            double avgScore = highScores.Any() ? highScores.Average(h => h.Score) : 0;
                        }
                        <h3 class="stat-value">@avgScore.ToString("0")</h3>
                        <span class="stat-change positive">+15% vs hier</span>
                    </div>
                </section>

                <section class="bento-box sessions-list">
                    <div class="section-header">
                        <div class="header-title">
                            <i class="bi bi-controller"></i>
                            <h2>Liste des Parties</h2>
                        </div>

                        <button class="toggle-btn" @onclick="ToggleHistories">
                            <i class="bi @(showAllHistories ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            @(showAllHistories ? "Réduire" : "Voir plus")
                        </button>
                    </div>
                    <div class="table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID Parties</th>
                                    <th>Joueur</th>
                                    <th>Date</th>
                                    <th>Score</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var histories = showAllHistories ? gameHistories : gameHistories.Take(5);
                                }
                                @if (gameHistories != null)
                                {
                                    foreach (var gh in histories)
                                    {
                                        <tr>
                                            <td>@gh.Id</td>
                                            <td>@gh.Player?.Username</td>
                                            <td>@gh.DatePlayed.ToLocalTime().ToString("g")</td>
                                            <td>@gh.Score</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </section>

                <section class="bento-box players-list">
                    <div class="section-header">
                        <div class="header-title">
                            <i class="bi bi-people"></i>
                            <h2>Liste des Joueurs</h2>
                        </div>

                        <div class="header-actions">
                            <button class="toggle-btn" @onclick="TogglePlayers">
                                <i class="bi @(showAllPlayers ? "bi-chevron-up" : "bi-chevron-down")"></i>
                                @(showAllPlayers ? "Réduire" : "Voir plus")
                            </button>

                            <button class="add-btn" @onclick="OpenAddModal"
                                style="display:flex; align-items:center; gap:0.5rem; background: linear-gradient(135deg, rgba(168, 0, 0, 0.3), rgba(168, 0, 0, 0.2)); border: 1px solid #a80000; color: white; padding: 0.4rem 0.9rem; border-radius: 999px; font-family: inherit; font-size: 0.55rem; cursor: pointer;">
                                <i class="bi bi-person-plus-fill"></i> Ajouter
                            </button>

                            <button class="export-btn" @onclick="ExportPlayers">
                                <i class="bi bi-download"></i> Exporter
                            </button>
                        </div>
                    </div>
                    <div class="table-wrapper">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Joueur</th>
                                    <th>Email</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var playersList = showAllPlayers ? players : players.Take(5);
                                }
                                @if (players != null)
                                {
                                    foreach (Player p in playersList)
                                    {
                                        <tr>
                                            <td>@p.Id</td>
                                            <td>@p.Username</td>
                                            <td>@p.Email</td>
                                            <td>
                                                <div class="action-buttons">
                                                    <label class="switch" title="@(p.IsActive ? "Désactiver" : "Activer")">
                                                        <input type="checkbox" checked="@p.IsActive"
                                                            @onchange="@(e => UpdateStatus(p, (bool)e.Value))" />
                                                        <span class="slider"></span>
                                                    </label>

                                                    <button class="action-btn delete" title="Supprimer"
                                                        @onclick="() => DeletePlayer(p.Id)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </main>

        @if (showAddModal)
        {
            <div class="modal-overlay">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Nouveau Héros</h3>
                        <button class="close-btn" @onclick="CloseAddModal"><i class="bi bi-x-lg"></i></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Nom d'utilisateur</label>
                            <input type="text" @bind="newPlayer.Username" class="form-control" placeholder="Pseudo du héros" />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Prénom</label>
                                <input type="text" @bind="newPlayer.FirstName" class="form-control" placeholder="Jean" />
                            </div>
                            <div class="form-group">
                                <label>Nom</label>
                                <input type="text" @bind="newPlayer.LastName" class="form-control" placeholder="Dupont" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" @bind="newPlayer.Email" class="form-control" placeholder="email@exemple.com" />
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="password" @bind="newPlayer.Password" class="form-control" placeholder="********" />
                        </div>
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="error-message">@errorMessage</div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button class="btn-cancel" @onclick="CloseAddModal">Annuler</button>
                        <button class="btn-confirm" @onclick="CreatePlayer">Créer le joueur</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Player> players = new();
    private List<HighScore> highScores = new();
    private List<GameHistory> gameHistories = new();
    private List<Player> leaderboard = new();

    private bool isLoaded = false;
    private bool showAllLeaderboard = false;
    private bool showAllHistories = false;
    private bool showAllPlayers = false;
    private bool showAddModal = false;
    private string errorMessage = "";
    private CreatePlayerRequest newPlayer = new();

    public class CreatePlayerRequest
    {
        public string Username { get; set; } = "";
        public string FirstName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }

    private void ToggleLeaderboard() => showAllLeaderboard = !showAllLeaderboard;
    private void ToggleHistories() => showAllHistories = !showAllHistories;
    private void TogglePlayers() => showAllPlayers = !showAllPlayers;
    private void OpenAddModal()
    {
        newPlayer = new CreatePlayerRequest();
        errorMessage = "";
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
    }

    private async Task CreatePlayer()
    {
        if (string.IsNullOrWhiteSpace(newPlayer.Username) || string.IsNullOrWhiteSpace(newPlayer.Password) ||
        string.IsNullOrWhiteSpace(newPlayer.Email))
        {
            errorMessage = "Tous les champs (Pseudo, Email, MdP) sont obligatoires.";
            return;
        }

        try
        {
            var response = await Http.PostAsJsonAsync("http://localhost:7000/game/Admin/players", newPlayer);

            if (response.IsSuccessStatusCode)
            {
                showAddModal = false;
                await LoadData();
                StateHasChanged();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Erreur : {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur technique : {ex.Message}";
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var token = AuthService.GetAccessToken();
        if (!string.IsNullOrEmpty(token))
        {
            Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
        }

        if (!AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/");
            return;
        }

        await LoadData();
        isLoaded = true;
    }

    private async Task LoadData()
    {
        try
        {
            players = await Http.GetFromJsonAsync<List<Player>>("http://localhost:7000/game/Admin/players") ?? new List<Player>();
            highScores = await Http.GetFromJsonAsync<List<HighScore>>("http://localhost:7000/game/HighScore") ?? new
            List<HighScore>();
            gameHistories = await Http.GetFromJsonAsync<List<GameHistory>>("http://localhost:7000/game/GameHistory") ?? new
            List<GameHistory>();
            leaderboard = await Http.GetFromJsonAsync<List<Player>>("http://localhost:7000/game/Admin/leaderboard") ?? new();
            highScores = highScores.OrderByDescending(h => h.Score).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur chargement: {ex.Message}");
        }
    }

    private async Task ExportPlayers()
    {
        try
        {
            var response = await Http.GetAsync("http://localhost:7000/game/Admin/players/export");
            if (response.IsSuccessStatusCode)
            {
                var fileStream = await response.Content.ReadAsStreamAsync();
                using var streamRef = new DotNetStreamReference(fileStream);
                await JS.InvokeVoidAsync("downloadFileFromStream", "players_export.csv", streamRef);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de l'export : {ex.Message}");
        }
    }

    private async Task UpdateStatus(Player player, bool newStatus)
    {
        var oldStatus = player.IsActive;
        player.IsActive = newStatus;

        try
        {
            var response = await Http.PutAsJsonAsync($"http://localhost:7000/game/Admin/players/{player.Id}/status", newStatus);
            if (!response.IsSuccessStatusCode)
            {
                player.IsActive = oldStatus;
                Console.WriteLine("Erreur lors de la mise à jour du statut");
            }
        }
        catch
        {
            player.IsActive = oldStatus;
        }
    }

    private async Task DeletePlayer(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Êtes-vous sûr de vouloir supprimer ce joueur ?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"http://localhost:7000/game/Admin/players/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadData();
                StateHasChanged();
            }
        }
    }

    private void Logout()
    {
        AuthService.Logout();
        NavigationManager.NavigateTo("/");
    }
}