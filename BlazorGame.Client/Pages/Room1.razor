@page "/room1"
@inject NavigationManager Navigation

<div class="salle-container">
    <h3>Salle 1</h3>
    <p>Un gobelin appara√Æt. Que faites-vous ?</p>

    <div class="actions">
        <button @onclick="Combattre">Combattre</button>
        <button @onclick="Fuir">Fuir</button>
        <button @onclick="Fouiller">Fouiller</button>
    </div>

    <p class="message">@message</p>
</div>

<style scoped>
    @@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

    html,
    body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        font-family: 'Press Start 2P', cursive;
        background-image: url("images/room1.jpg");
        background-size: cover;
        background-position: center;
        color: white;
        overflow: hidden;
    }

    .salle-container {
        height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-size: cover;
        background-position: center;
        color: #fff;
        font-family: 'Press Start 2P', cursive;
        text-align: center;
        padding: 2rem;
    }

    h3 {
        font-size: 1.5rem;
        color: rgb(168, 0, 0);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        margin-bottom: 1rem;
    }

    p {
        font-size: 1rem;
        margin: 0.5rem 0;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    }

    .actions {
        margin: 1.5rem 0;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
    }

    button {
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.4);
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        transition: transform 0.2s, background-color 0.3s, box-shadow 0.3s;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    button:hover {
        background: rgba(255, 255, 255, 0.35);
        transform: scale(1.05);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
    }

    .message {
        margin-top: 1rem;
        font-size: 0.9rem;
        color: rgb(168, 0, 0);
        text-shadow: 1px 1px 2px rgba(0,0,0,0.7);
    }
</style>

@code {
    private string message = "Choisissez une action.";

    private void Combattre() => message = "Vous attaquez le gobelin.";
    private void Fuir() => message = "Vous fuyez la salle.";
    private void Fouiller()
    {
        message = "Vous fouillez la salle.";
        Navigation.NavigateTo("/room2");
    }
}