@page "/room1"
@inject NavigationManager Navigation

<link rel="stylesheet" href="css/room.css" />
<div class="salle-container" style="background-image: url('images/room1.jpg');">
    <div class="salle-content">
        <img src="images/logo.png" class="room-logo" />
        <h3>Salle 1</h3>
        <p>Un gobelin appara√Æt. Que faites-vous ?</p>
        <div class="actions">
            <button @onclick="Combattre">Combattre</button>
            <button @onclick="Fuir">Fuir</button>
            <button @onclick="Fouiller">Fouiller</button>
        </div>
        <p class="message">@message</p>
    </div>
</div>

@code {
    private string message = "Choisissez une action.";

    private void Combattre() => message = "Vous attaquez le gobelin.";
    private void Fuir() => message = "Vous fuyez la salle.";
    private void Fouiller()
    {
        message = "Vous fouillez la salle.";
        Navigation.NavigateTo("/room2");
    }
}