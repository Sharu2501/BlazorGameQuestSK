@page "/salle3"
@inject NavigationManager Navigation

<h3>Salle 3</h3>
<p>Un troll bloque le passage !</p>

<button @onclick="Combattre">Combattre</button>
<button @onclick="Fuir">Fuir</button>

<p>@message</p>

@code {
    private string message = "Choisissez une action.";

    private void Combattre()
    {
        message = "Vous attaquez le troll.";
    }

    private void Fuir()
    {
        message = "Vous fuyez et avancez vers la salle suivante.";
    }
}