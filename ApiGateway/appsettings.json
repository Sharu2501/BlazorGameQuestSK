{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "gameapi-route": {
        "ClusterId": "gameapi-cluster",
        "Match": {
          "Path": "/game/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "gameapi-cluster": {
        "Destinations": {
          "gameapi": {
            "Address": "http://gameapi:8080/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "authenticationservices": {
            "Address": "http://authenticationservices:80/"
          }
        }
      }
    }
  }
}